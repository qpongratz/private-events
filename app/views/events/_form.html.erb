<%= form_with model: event do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, placeholder: 'Name of the Event' %>
  <%= form.label :description %>
  <%= form.text_area :description, placeholder: 'What kind of Event is it?' %>
  <%= form.label :location %>
  <%= form.text_field :location, placeholder: 'Where is it?' %>
  <%= form.label :date %>
  <%= form.date_field :date %>
  <%= form.submit 'Create Event' %>
<% end %>